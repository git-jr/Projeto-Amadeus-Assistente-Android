<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.paradoxo.amadeus">

    <application
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".activity.ConfigPrimariaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListaSentencaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.AprendizActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.SobreActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent" />
        <activity
            android:name=".activity.EditarSentencaActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.ListaEntidadeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.ListaAcaoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.EditarItemEntidadeNovoActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.VozConfigActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.TrocarVozActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />
        <activity
            android:name=".activity.RetroCompatibilidadeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.Transparent"
            android:windowSoftInputMode="stateVisible|adjustResize|stateAlwaysHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".assis.MyAssistantService"
            android:permission="android.permission.BIND_VOICE_INTERACTION">
            <intent-filter>
                <action android:name="android.service.voice.VoiceInteractionService" />
            </intent-filter>

            <meta-data
                android:name="android.voice_interaction"
                android:resource="@xml/assist_metadata" />
        </service>
        <service
            android:name=".assis.MyAssistantSessionService"
            android:permission="android.permission.BIND_VOICE_INTERACTION" />
        <service
            android:name=".assis.MyAssistantSessionService"
            android:permission="android.permission.BIND_VOICE_INTERACTION" />

        <service android:name=".assis.VoiceCommandService"
            android:permission="android.permission.BIND_VOICE_INTERACTION"/>

        <service
            android:name=".util.voz.EscutadaoraService"
            android:exported="false"
            android:permission="android.permission.BIND_VOICE_INTERACTION">
            <intent-filter>
                <action android:name="SERVICE_ESCUTADORA" />
            </intent-filter>
        </service>
        <service android:name=".service.GravaHistoricoService" />
        <service
            android:name=".firebase.MessasingService"
            android:permission="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>