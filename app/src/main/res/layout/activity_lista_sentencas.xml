<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/listaSetencasLayout"
    android:background="#FFF"
    android:fitsSystemWindows="false">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_bottom_card"
        android:layout_marginEnd="@dimen/padding_bottom_card"
        android:layout_marginBottom="53dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_lista_tipo_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_anchorGravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borda_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            tools:ignore="RtlSymmetry">

            <EditText
                android:id="@+id/buscaSentencaEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:hint="@string/pesquisar_por"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:textColorHint="@color/gray_300"
                tools:ignore="Autofill,TextFields" />


            <ImageView
                android:id="@+id/adicionarButton"
                android:clickable="true"
                android:background="?selectableItemBackground"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/botao_enviar"
                android:padding="12dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_add"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>