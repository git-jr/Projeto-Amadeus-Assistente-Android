<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:drawable/screen_background_dark_transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp" >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/size_icone_image">

                <TextView
                    android:id="@+id/tituloTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editar_sinonimo"
                    android:textColor="@color/colorSecondaryDark3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sinonimoTextInput"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/novo_sinonimo"
                    android:layout_marginTop="@dimen/padding_bottom_card"
                    app:boxStrokeColor="@color/borda_card"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/TextAppearance.App.Error.Personalizado"
                    app:hintTextAppearance="@style/TextAppearance.App.Hint.Personalizado">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sinonimoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionGo"/>

                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="28dp"
                    android:gravity="end|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/botaoCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/padding_bottom_card"
                        android:layout_marginRight="@dimen/padding_bottom_card"
                        android:gravity="center"
                        android:paddingStart="@dimen/text_margin"
                        android:paddingEnd="@dimen/text_margin"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:text="@string/cancelar" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/botaoSalvar"
                        style="@style/BotaoOkay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:theme="@style/BotaoOkay"
                        app:cornerRadius="5dp"
                        android:text="@string/ok" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>