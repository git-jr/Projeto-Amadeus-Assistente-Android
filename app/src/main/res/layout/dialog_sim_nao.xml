<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:drawable/screen_background_dark_transparent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        app:cardElevation="10dp" >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/size_icone_image">

                <TextView
                    android:id="@+id/tituloTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/colorSecondaryDark3"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/conteudoTexView"
                    android:layout_marginTop="@dimen/padding_bottom_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Descrição do que vai estar escrito na dialog"
                    android:textColor="@color/subtitulo"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/linkTextView"
                    android:layout_marginTop="@dimen/text_margin"
                    android:gravity="center"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="@dimen/padding_bottom_card"
                    android:text="@string/politica_privaicade"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/azul_link"
                    android:textStyle="bold"
                    android:focusable="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="28dp"
                    android:gravity="end|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/botaoNegar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/padding_bottom_card"
                        android:layout_marginRight="@dimen/padding_bottom_card"
                        android:gravity="center"
                        android:paddingStart="@dimen/text_margin"
                        android:paddingEnd="@dimen/text_margin"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        tools:text="CANCELAR"
                        style="@style/Widget.AppCompat.Button.Borderless"/>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/botaoAutorizar"
                        style="@style/BotaoOkay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:theme="@style/BotaoOkay"
                        app:cornerRadius="5dp"
                        tools:text="OK" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>