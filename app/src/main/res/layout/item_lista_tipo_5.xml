<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemComum"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_lista">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_bottom_card"
        android:layout_marginBottom="@dimen/padding_bottom_card"
        android:minWidth="50dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginStart="-50dp"
            android:layout_marginLeft="-50dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="load_dots_white.json"
            app:lottie_loop="true" />


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>