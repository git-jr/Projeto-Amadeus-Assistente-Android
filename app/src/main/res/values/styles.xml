<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/cinza10</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="UI.Translucent" parent="android:Theme.Translucent.NoTitleBar" />

    <style name="Theme.AppCompat.Light.NoActionBar.Transparent">
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="EstiloBtnNegativo2" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="EstiloBtnAfirmativo" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="SwitchPersoanalizado">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/cinza4</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="TextAppearance.App.Hint.Personalizado" parent="@android:style/TextAppearance">
        <item name="colorControlActivated">@color/colorSecondaryDark2</item>
        <item name="colorControlHighlight">@color/colorSecondaryDark2</item>
        <item name="colorControlNormal">@color/colorSecondaryDark2</item>
        <item name="android:textColor">@color/colorSecondaryDark2</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BotaoOkay" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <color name="colorSecondaryDark2">#232F34</color>
</resources>
