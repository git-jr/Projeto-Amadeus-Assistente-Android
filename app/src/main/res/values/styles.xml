<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Transparent">
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="TextAppearance.App.Hint.Personalizado" parent="@android:style/TextAppearance">
        <item name="colorControlActivated">@color/colorSecondaryDark2</item>
        <item name="colorControlHighlight">@color/colorSecondaryDark2</item>
        <item name="colorControlNormal">@color/colorSecondaryDark2</item>
        <item name="android:textColor">@color/colorSecondaryDark2</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.App.Error.Personalizado" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BotaoOkay" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>


    <style name="barraProgressoPersonalizada" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/colorSecondaryDark3</item>
        <item name="android:color">@color/colorSecondaryDark3</item>
    </style>

</resources>
